<form class="me-page" name="container-form" method="POST" action="/me/products/handle-actions-form">
    {{>me-header }}
    <div class="me-page-main">
        <div>
            <h3>Your products ({{countProduct}})</h3>
            <a href="/me/stored/trash/products">Recycle Bin <i class="fas fa-trash-alt"></i>({{countDelete}})</a>
            <div class="mt-4 d-flex align-items-center">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="checkbox-all" >
                    <label class="form-check-label" for="checkbox-all">
                        Select All
                    </label>
                </div>
                <div class="form-group form-control-sm checkbox-selectAll-options" style="margin-bottom:0;">    
                    <select class="form-control" name="action">
                    {{!-- <option value="">Actions</option> --}}
                    <option value="delete">Delete</option>
                    </select>
                </div>
                <button id="do-actions-btn" class="btn btn-primary btn-sm" style="padding:7px;" disabled>Apply</button>
            </div>
        </div>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Order</th>
                    <th scope="col">
                        Name
                        {{{sortable 'name' _sort}}}
                        {{!-- truyen parameter len url --}}
                    </th>
                    <th scope="col">
                        Price Product
                        {{{sortable 'price' _sort}}}
                    </th>
                    <th scope="col">
                        Type
                        {{{sortable 'type' _sort}}}
                    </th>
                    <th scope="col">
                        Color
                        {{{sortable 'color' _sort}}}
                    </th>                    
                    {{!-- <th scope="col">Quantity</th> --}}
                    <th scope="col">
                        Created Time
                        {{{sortable 'createdAt' _sort}}}
                    </th>
                    <th scope="col">
                        Updated Time
                        {{{sortable 'updatedAt' _sort}}}
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    {{!-- sum(a,b) -> sum(@index,1) (@index: chi muc array trong hbs--}}
                    <td>
                        <div class="form-check">
                            <input class="form-check-input" id="checkbox" type="checkbox" name="productId[]" value="{{this._id}}" >
                        </div>
                    </td>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.type}}</td>
                    <td>{{this.color}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>{{this.updatedAt}}</td>
                    <td>
                        <a href="/me/stored/{{this._id}}/edit" class="btn btn-link">Update</a>
                        <a href="" class="btn btn-link" data-id="{{this._id}}" data-toggle="modal" data-target="#delete-product-modal">Delete</a>
                    </td>
                </tr>
                {{!-- Khi khong co du lieu --}}
                {{else}} 
                <tr>
                    <td colspan="9">
                        You haven't posted product yet. 
                        <a href="/me/create-product">Create product?</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</form>

{{!-- confirm delete  --}}
<div id="delete-product-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure ?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-product-modal" type="button" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{!-- hidden delete form --}}
<form class="form-delete" method="POST" name="delete-product-form"></form>

<script>
    document.addEventListener("DOMContentLoaded", function(e) {
        var productId;
        var deleteForm = document.forms['delete-product-form']
        var btnDelete = document.getElementById('btn-delete-product-modal');
        var checkboxAll = $('#checkbox-all');
        var checkbox = $('input[name="productId[]"]');// khi muon lay ra nhieu
        var actionsBtn = $('#do-actions-btn');
        var containerForm = $('form[name="container-form"]');
        // bellow function to sure character ($) from jquery is loaded 
        // get id product for delete modal when click on delete(href)
        $('#delete-product-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            productId = button.data('id');
        });
        // event click on btn-delete to add action for delete form to send method [DELETE] for modal
        // and submit form
        btnDelete.onclick = function (event) {
            deleteForm.action = '/me/products/' + productId + '?_method=DELETE';
            deleteForm.submit();
        };

        // when click on checkboxAll -> check all checkbox child
        checkboxAll.change(function(){
            if($(this).prop('checked')) {
                checkbox.prop('checked', true);
            }
            else {
                checkbox.prop('checked',false);
            }
            enableExecutedBtn();
        });
        
        // when click on any checkbox child -> uncheck checkboxAll
        checkbox.change(function(){
            var isCheckedAll = checkbox.length === $('input[name="productId[]"]:checked').length;
            checkboxAll.prop('checked', isCheckedAll);
            enableExecutedBtn();
        });

       
        // enable to executed button 
        function enableExecutedBtn() {
            var countChecked = $('input[name="productId[]"]:checked').length;
            if(countChecked > 0) {
                actionsBtn.attr('disabled',false);
            }
            if(countChecked == 0) {
                actionsBtn.attr('disabled',true);
            }
        };
        
    });
</script>
