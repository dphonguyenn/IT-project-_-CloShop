{{!-- For MENU --}}
<script>
    const $ = document.querySelector.bind(document);
    const $$ = document.querySelectorAll.bind(document);
    const menu_links = $$('.menu-link');
    const shop_link = $('.shop-link');
    const sub_menu = $('.sub-menu');
    // set active cho items 
    menu_links.forEach((link, index) => {
        link.onclick = function (e) {
            if (link === shop_link) {
                $('.menu-link.active').classList.remove('active');
                this.classList.add('active');
                e.preventDefault();
                if (sub_menu.classList.contains('sub-menu-unactive')) {
                    sub_menu.classList.remove('sub-menu-unactive');
                    sub_menu.classList.add('sub-menu-active');
                }
                else {
                    sub_menu.classList.remove('sub-menu-active');
                    sub_menu.classList.add('sub-menu-unactive');
                }
            }
            else {
                menu_links.forEach(link => link.classList.remove('active'));
                this.classList.add('active');
            }
        }
    });
</script>