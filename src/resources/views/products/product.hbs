<div class="about-page">
    {{>header}}
    <div class="main-page">
        {{>mainproperties}}
        <div class="main-part">
            <div class="product-content">
                <div class="row">
                    <div class="col-lg-8 col-sm-6">
                        <div class="product-img">
                            <div class="row">
                                <div class="col-sm-5 col-lg-3">
                                    <div class="part-sub-img">
                                        <a href="#" class="product-sub-img">
                                            <img src="{{collection.img1}}" alt="{{colelction.name}}">
                                        </a>
                                        <a href="#" class="product-sub-img">
                                            <img src="{{collection.img2}}" alt="{{colelction.name}}">
                                        </a>
                                        <a href="#" class="product-sub-img">
                                            <img src="{{collection.img3}}" alt="{{colelction.name}}">
                                        </a>
                                        <a href="#" class="product-sub-img">
                                            <img src="{{collection.img4}}" alt="{{colelction.name}}">
                                        </a>
                                        <a href="#" class="product-sub-img">
                                            <img src="{{collection.img5}}" alt="{{colelction.name}}">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-sm-7 col-lg-9">
                                    <a href="#" class="product-main-img">
                                        <img src="{{collection.img1}}" alt="{{colelction.name}}">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-sm-6">
                        <div class="row">
                            <h3 class="product-name">
                                "{{collection.name}}"
                            </h3>
                        </div>
                        <div class="row">
                            <div class="product-price">
                                <h4>
                                    {{collection.price}} đ
                                </h4>
                                <p>
                                    Color: {{collection.color}}
                                </p>
                                <p>
                                    Size: {{collection.size}}
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <h4 style="font: size 20px;">Số Lượng</h4>
                            <br>
                            <div class="part-num-product">
                                <input type="number" value="1" min="1">
                                <button>
                                    <i class="fas fa-shopping-cart"> ADD TO CART</i>
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="product-description">
                                <h4>Description</h4>
                                <p>
                                    Season: {{collection.season}} <br>
                                    Occasion: {{collection.occasion}} <br>
                                    Material: {{collection.material}} <br>
                                    Length: {{collection.length}} <br>
                                    Fit type: {{collection.fit_type}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="footer">

</div>