<div class="collection-page">
    {{>header}}
    <div class="main-page">
        {{>mainproperties}}
        <div class="main-part">
            <h2 class="header-page" style="text-transform: uppercase;">
                {{type}}
            </h2>
            <div class="row">
                {{#each collections}}
                <div class="col-sm-6 col-lg-4">
                    <div class="part-cards">
                        <div class="card-product">
                            <a href="/products/{{this.id_product}}" class="product-img">
                                <img src="{{this.img1}}" alt="{{this.name}}" class="img1-prd" style="height:500px;">
                            </a>
                            <a href="/products/{{this.id_product}}" class="product-name">
                                <p>"{{this.name}}"</p>
                            </a>
                            <p class="product-price">{{this.price}}Ä‘</p>
                        </div>
                    </div>
                    <img src="{{this.img2}}" alt="{{this.name}}" class="img2-prd" style="display:none;">
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
